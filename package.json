{
  "name": "cricket-layouts",
  "version": "1.0.0",
  "description": "Cricket bundle",
  "homepage": "https://github.com/EwanLyon/cricket-layouts",
  "author": {
    "name": "Ewan Lyon"
  },
  "files": [
    "dashboard",
    "graphics",
    "extension.js",
    "extension"
  ],
  "nodecg": {
    "compatibleRange": "^1.4.0",
    "transformBareModuleSpecifiers": true,
    "dashboardPanels": [
      {
        "name": "teams",
        "title": "Teams",
        "width": 3,
        "file": "teams.html",
        "headerColor": "#525F78",
        "workspace": "Setup"
      },
      {
        "name": "match",
        "title": "Match Info",
        "width": 3,
        "file": "match.html",
        "headerColor": "#525F78",
        "workspace": "Setup"
      },
      {
        "name": "battingroster",
        "title": "Batting Roster",
        "width": 2,
        "file": "battingroster.html",
        "headerColor": "#525F78",
        "workspace": "Setup"
      },
      {
        "name": "runs",
        "title": "Runs",
        "width": 3,
        "file": "runs.html",
        "headerColor": "#525F78",
        "workspace": "Game"
      },
      {
        "name": "over",
        "title": "Current Over",
        "width": 2,
        "file": "over.html",
        "headerColor": "#525F78",
        "workspace": "Game"
      },
      {
        "name": "wicket",
        "title": "Wicket",
        "width": 2,
        "file": "wicket.html",
        "headerColor": "#525F78",
        "workspace": "Game"
      },
      {
        "name": "players",
        "title": "Players",
        "file": "players.html",
        "fullbleed": true,
        "headerColor": "#525F78"
      },
      {
        "name": "bowler",
        "title": "Bowler",
        "width": 2,
        "file": "bowler.html",
        "headerColor": "#525F78",
        "workspace": "Game"
      },
      {
        "name": "debug",
        "title": "Debug",
        "width": 2,
        "file": "debug.html",
        "headerColor": "#525F78",
        "workspace": "Dev"
      },
      {
        "name": "proddisplay",
        "title": "Graphics Controller",
        "width": 2,
        "file": "proddisplay.html",
        "headerColor": "#525F78",
        "workspace": "Producer"
      }
    ],
    "graphics": [
      {
        "file": "mainBar.html",
        "width": 1400,
        "height": 80
      },
      {
        "file": "small.html",
        "width": 260,
        "height": 105
      },
      {
        "file": "fui.html",
        "width": 1920,
        "height": 100
      },
      {
        "file": "fullframe.html",
        "width": 774,
        "height": 865
      }
    ],
    "assetCategories": [
      {
        "name": "teams",
        "title": "Teams",
        "allowedTypes": [
          "json"
        ]
      }
    ]
  },
  "license": "Apache-2.0",
  "devDependencies": {
    "typescript": "^3.5.1",
    "trash-cli": "^3.0.0",
    "tslib": "^1.9.3"
  },
  "dependencies": {
    "@types/animejs": "^2.0.2",
    "animejs": "^3.0.1"
  },
  "scripts": {
    "start": "node ../.. --bundlesEnabled=cricket-layouts",
    "build": "npm run build:extension && npm run build:browser",
    "build:extension": "trash dist && tsc -b tsconfig.node.json",
    "build:browser": "tsc -p tsconfig.browser.json",
    "schema-types": "nodecg schema-types"
  }
}
