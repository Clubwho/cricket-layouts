{
  "name": "cricket-layouts",
  "version": "0.3.0",
  "description": "Cricket bundle",
  "homepage": "https://github.com/EwanLyon/cricket-layouts",
  "author": {
    "name": "Ewan Lyon"
  },
  "files": [
    "dashboard",
    "graphics",
    "extension.js",
    "extension"
  ],
  "nodecg": {
    "compatibleRange": "^1.4.0",
    "transformBareModuleSpecifiers": true,
    "dashboardPanels": [
      {
        "name": "teams",
        "title": "Teams",
        "width": 3,
        "file": "teams.html",
        "headerColor": "#525F78",
        "workspace": "!Setup"
      },
      {
        "name": "match",
        "title": "Match Info",
        "width": 3,
        "file": "match.html",
        "headerColor": "#525F78",
        "workspace": "!Setup"
      },
      {
        "name": "battingroster",
        "title": "Batting Roster",
        "width": 2,
        "file": "battingroster.html",
        "headerColor": "#525F78",
        "workspace": "!Setup"
      },
      {
        "name": "runs",
        "title": "Runs",
        "width": 3,
        "file": "runs.html",
        "headerColor": "#525F78",
        "workspace": "Game"
      },
      {
        "name": "over",
        "title": "Current Over",
        "width": 2,
        "file": "over.html",
        "headerColor": "#525F78",
        "workspace": "Game"
      },
      
      {
        "name": "wicket",
        "title": "Wicket",
        "width": 2,
        "file": "wicket.html",
        "headerColor": "#525F78",
        "workspace": "Game"
      },
      {
        "name": "players",
        "title": "Players",
        "file": "players.html",
        "fullbleed": true,
        "headerColor": "#525F78"
      },
      
      {
        "name": "bowler",
        "title": "Bowler",
        "width": 2,
        "file": "bowler.html",
        "headerColor": "#525F78",
        "workspace": "Game"
      }
      
    ],
    "graphics": [
      {
        "file": "mainBar.html",
        "width": 1920,
        "height": 1080
      }
    ],
    "assetCategories": [
      {
        "name": "teams",
        "title": "Teams",
        "allowedTypes": [
          "json"
        ]
      }
    ]
  },
  "license": "Apache-2.0",
  "devDependencies": {
    "typescript": "^3.2.1"
  },
  "dependencies": {
    "ajv": "^6.6.1",
    "json-schema-to-typescript": "^6.1.0",
    "trash-cli": "^1.4.0",
    "tslib": "^1.9.3"
  },
  "scripts": {
    "start": "node ../.. --bundlesEnabled=cricket-layouts",
    "build": "npm run build:extension && npm run build:browser",
    "build:extension": "trash dist && tsc -b tsconfig.node.json",
    "build:browser": "tsc -p tsconfig.browser.json",
    "schema-types": "nodecg schema-types"
  }
}
