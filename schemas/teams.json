{
	"$schema": "http://json-schema.org/draft-04/schema#",

	"type": "array",
	"items": {
		"type": "object",
		"additionalProperties": false,

		"properties": {
			"name": {
				"type": "string",
				"description": "The name of the team",
				"default": ""
			},
			"tla": {
				"type": "string",
				"description": "Three-letter abbreviation of team name. e.g. India => IND",
				"default": ""
			},
			"players": {
				"type": "array",
				"items": {
					"player": {
						"type": "object",
						"name": {
							"type": "string",
							"description": "Player's name",
							"default": ""
						},
						"role": {
							"type": "string",
							"description": "The player's primary role",
							"enum": ["batter", "bowler", "wicketkeeper", "allrounder"],
							"default": ["allrounder"]
						},
						"bowlingStyle": {
							"type": "string",
							"description": "The player's bowling style",
							"default": "Right arm fast"
						},
						"required": ["name", "role"]
					}
				}
			}
		}
	}
}