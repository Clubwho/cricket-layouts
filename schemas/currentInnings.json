{
	"$schema": "http://json-schema.org/draft-04/schema#",
	"type": "object",
	"additionalProperties": false,
	"properties": {
		"runs": {
			"type": "integer",
			"description": "Current runs scored",
			"default": 0
		},
		"wickets": {
			"type": "integer",
			"description": "Current wickets",
			"minimum": 0,
			"maximum": 10,
			"default": 0
		},
		"over": {
			"type": "number",
			"description": "Current over with decimal, e.g. 15.2",
			"default": 0,
			"minimum": 0
		},
		"bowlingTeam": {
			"type": "string",
			"description": "The team that is bowling this innings",
			"default": "NO BOWLING TEAM"
		},
		"battingTeam": {
			"type": "string",
			"description": "The team that is batting this innings",
			"default": "NO BATTING TEAM"
		},
		"TLAs": {
			"type": "array",
			"items": {
				"type": "string"
			},
			"description": "Three letter abreviations for playing teams. [Bowlers, Batters]"
		},
		"currentBowler": {
			"$ref": "types/bowler.json"
		},
		"currentBatterFacing": {
			"$ref": "types/batter.json"
		},
		"currentBatterRunning": {
			"$ref": "types/batter.json"
		},
		"bowlers": {
			"type": "array",
			"items": {
				"$ref": "types/bowler.json"
			}
		},
		"batters": {
			"type": "array",
			"items": {
				"$ref": "types/batter.json"
			}
		}
	},
	"required": ["runs", "wickets", "over", "battingTeam", "bowlingTeam", "TLAs", "currentBowler", "currentBatterFacing", "currentBatterRunning", "bowlers", "batters"]
}